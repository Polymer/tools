{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2016"
    ],
    "outDir": "lib",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "pretty": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
