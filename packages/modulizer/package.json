{
  "name": "polymer-modulizer",
  "description": "Converts Bower + HTML Imports packages to npm + JS modules",
  "version": "0.4.3",
  "author": "The Polymer Project Authors",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polymer/polymer-modulizer.git"
  },
  "license": "BSD-3-Clause",
  "bin": {
    "modulizer": "bin/modulizer.js"
  },
  "files": [
    "dependency-map.json",
    "lib/",
    "custom_typings/",
    "bin/",
    "src/"
  ],
  "scripts": {
    "build": "tsc --skipLibCheck",
    "build:fixtures": "npm run build && node lib/tools/update-fixtures",
    "clean": "rm -rf ./lib/",
    "format": "find bin src -name \"*.[jt]s\" | xargs clang-format --style=file -i",
    "lint": "tslint -p .",
    "prepublishOnly": "npm test",
    "test": "npm run test:fast && npm run lint",
    "test:full": "npm run build && bash test/run-mocha.sh && npm run lint",
    "test:fast": "npm run build && bash test/run-mocha.sh unit",
    "test:watch": "tsc-then -- bash test/run-mocha.sh unit"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@types/esprima": "^2.1.33",
    "@types/fs-extra": "^5.0.0",
    "@types/glob": "^5.0.35",
    "@types/inquirer": "^0.0.35",
    "@types/js-yaml": "^3.11.1",
    "@types/mkdirp": "^0.5.1",
    "@types/mz": "^0.0.31",
    "@types/node-fetch": "^1.6.7",
    "@types/parse5": "^2.2.34",
    "@types/rimraf": "2.0.2",
    "@types/semver": "^5.3.32",
    "ast-types": "0.15.2",
    "chalk": "^2.3.0",
    "command-line-args": "^4.0.6",
    "command-line-usage": "^4.0.0",
    "dom5": "^3.0.1",
    "espree": "^9.3.2",
    "esprima": "^3.1.3",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "inquirer": "^3.2.0",
    "ix": "2.1.0",
    "js-yaml": "^3.11.0",
    "jscodeshift": "^0.5.1",
    "mkdirp": "^0.5.1",
    "mz": "^2.6.0",
    "node-fetch": "^2.1.1",
    "parse5": "^4.0.0",
    "polymer-analyzer": "^3.0.2",
    "polymer-workspaces": "^2.1.0",
    "recast": "0.21.1",
    "rimraf": "^2.6.1",
    "semver": "^5.3.0",
    "source-map-support": "^0.4.15",
    "spdx-license-list": "^3.0.1",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/diff": "^3.2.0",
    "diff": "^3.3.0",
    "dir-compare": "^1.4.0",
    "tsc-then": "^1.1.0"
  }
}
