{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "lib": ["es2017", "esnext.asynciterable"],

    "declaration": true,
    "sourceMap": true,
    "pretty": true
  }
}
