{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "preserveConstEnums": true,

    "lib": [
      "es2017"
    ],

    "declaration": true,
    "sourceMap": true,
    "pretty": true
  }
}
